{
  "name": "sqlcortex-vscode",
  "displayName": "SQLCortex",
  "description": "SQLCortex VS Code extension",
  "version": "0.0.2",
  "publisher": "sqlcortex",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:sql",
    "onLanguage:pgsql",
    "onLanguage:mssql",
    "onView:dbcopilot.overview",
    "onView:dbcopilot.agents",
    "onView:dbcopilot.schema",
    "onView:dbcopilot.recommendations",
    "onView:dbcopilot.migrations",
    "onView:dbcopilot.sqlPreview",
    "onView:dbcopilot.riskImpact",
    "onView:dbcopilot.logs",
    "onCommand:dbcopilot.connectDatabase",
    "onCommand:dbcopilot.captureSchemaSnapshot",
    "onCommand:dbcopilot.optimizeCurrentQuery",
    "onCommand:dbcopilot.analyzeSchemaHealth",
    "onCommand:dbcopilot.createTableWizard",
    "onCommand:dbcopilot.openOptimizationPlan",
    "onCommand:dbcopilot.openErdDiagram",
    "onCommand:dbcopilot.openMigrationPlan",
    "onCommand:dbcopilot.toggleMode"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sqlcortex.login",
        "title": "SQLCortex: Login"
      },
      {
        "command": "sqlcortex.logout",
        "title": "SQLCortex: Logout"
      },
      {
        "command": "sqlcortex.selectOrg",
        "title": "SQLCortex: Select Org"
      },
      {
        "command": "sqlcortex.selectProject",
        "title": "SQLCortex: Select Project"
      },
      {
        "command": "sqlcortex.selectConnection",
        "title": "SQLCortex: Select Connection"
      },
      {
        "command": "sqlcortex.setExplainMode",
        "title": "SQLCortex: Set EXPLAIN Mode"
      },
      {
        "command": "sqlcortex.refreshExplorer",
        "title": "SQLCortex: Refresh Database Explorer"
      },
      {
        "command": "sqlcortex.searchTable",
        "title": "SQLCortex: Search Table"
      },
      {
        "command": "sqlcortex.copyTableName",
        "title": "SQLCortex: Copy Table Name"
      },
      {
        "command": "sqlcortex.copyColumnName",
        "title": "SQLCortex: Copy Column Name"
      },
      {
        "command": "sqlcortex.runTableQuery",
        "title": "SQLCortex: Run Table Query"
      },
      {
        "command": "sqlcortex.runQuery",
        "title": "Run Query",
        "category": "SQLCortex",
        "icon": {
          "dark": "resources/run-query-dark.svg",
          "light": "resources/run-query-light.svg"
        }
      },
      {
        "command": "sqlcortex.runSelection",
        "title": "SQLCortex: Run Selection"
      },
      {
        "command": "sqlcortex.analyzeSelection",
        "title": "SQLCortex: Analyze Selection"
      },
      {
        "command": "sqlcortex.analyzeSelectionWithAnalyze",
        "title": "SQLCortex: Analyze Selection (EXPLAIN ANALYZE)"
      },
      {
        "command": "sqlcortex.analyzeDocument",
        "title": "SQLCortex: Analyze Query"
      },
      {
        "command": "sqlcortex.analyzeDocumentWithAnalyze",
        "title": "SQLCortex: Analyze Query (EXPLAIN ANALYZE)"
      },
      {
        "command": "sqlcortex.analyzeSchema",
        "title": "SQLCortex: Analyze Schema"
      },
      {
        "command": "sqlcortex.analyzeTable",
        "title": "SQLCortex: Analyze Table"
      },
      {
        "command": "sqlcortex.drawSchemaErd",
        "title": "SQLCortex: Draw ERD Diagram"
      },
      {
        "command": "dbcopilot.connectDatabase",
        "title": "DB Copilot: Connect to Database"
      },
      {
        "command": "dbcopilot.captureSchemaSnapshot",
        "title": "DB Copilot: Capture Schema Snapshot"
      },
      {
        "command": "dbcopilot.optimizeCurrentQuery",
        "title": "DB Copilot: Optimize Current Query"
      },
      {
        "command": "dbcopilot.analyzeSchemaHealth",
        "title": "DB Copilot: Analyze Schema Health"
      },
      {
        "command": "dbcopilot.createTableWizard",
        "title": "DB Copilot: Create Table (Wizard)"
      },
      {
        "command": "dbcopilot.openOptimizationPlan",
        "title": "DB Copilot: Open Optimization Plan"
      },
      {
        "command": "dbcopilot.openErdDiagram",
        "title": "DB Copilot: Open ER Diagram"
      },
      {
        "command": "dbcopilot.openMigrationPlan",
        "title": "DB Copilot: Open Migration Plan"
      },
      {
        "command": "dbcopilot.toggleMode",
        "title": "DB Copilot: Toggle Mode (Read-Only/Draft/Execution)"
      }
    ],
    "configuration": {
      "title": "SQLCortex",
      "properties": {
        "sqlcortex.explain.mode": {
          "type": "string",
          "enum": [
            "EXPLAIN",
            "EXPLAIN_ANALYZE"
          ],
          "default": "EXPLAIN",
          "description": "Choose the EXPLAIN mode for analysis requests."
        },
        "sqlcortex.explain.allowAnalyze": {
          "type": "boolean",
          "default": false,
          "description": "Allow EXPLAIN ANALYZE for analysis requests. May execute queries."
        },
        "sqlcortex.explainMode": {
          "type": "string",
          "enum": [
            "EXPLAIN",
            "EXPLAIN_ANALYZE"
          ],
          "default": "EXPLAIN",
          "description": "Deprecated. Use sqlcortex.explain.mode instead."
        },
        "sqlcortex.maxSqlLength": {
          "type": "number",
          "default": 20000,
          "description": "Maximum SQL length (in characters) allowed for analysis."
        },
        "sqlcortex.diagnostics.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable inline diagnostics for basic SQL anti-patterns."
        },
        "sqlcortex.codelens.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Show SQLCortex analyze actions above SQL files."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sqlcortex",
          "title": "SQLCortex",
          "icon": "resources/sqlcortex.svg"
        },
        {
          "id": "dbcopilot",
          "title": "DB Copilot",
          "icon": "resources/sqlcortex.svg"
        }
      ],
      "panel": [
        {
          "id": "sqlcortexResults",
          "title": "SQLCortex Results",
          "icon": "resources/sqlcortex.svg"
        },
        {
          "id": "dbcopilotPanel",
          "title": "DB Copilot",
          "icon": "resources/sqlcortex.svg"
        }
      ],
      "secondarySidebar": [
        {
          "id": "sqlcortexInsightsSecondary",
          "title": "Insights",
          "icon": "resources/sqlcortex.svg"
        },
        {
          "id": "sqlcortexAgentSecondary",
          "title": "Agent",
          "icon": "resources/sqlcortex.svg"
        }
      ]
    },
    "views": {
      "sqlcortexResults": [
        {
          "id": "sqlcortex.resultsView",
          "name": "Results",
          "type": "webview",
          "icon": "resources/sqlcortex.svg"
        }
      ],
      "dbcopilotPanel": [
        {
          "id": "dbcopilot.sqlPreview",
          "name": "SQL Preview",
          "type": "webview",
          "icon": "resources/sqlcortex.svg"
        },
        {
          "id": "dbcopilot.riskImpact",
          "name": "Risk & Impact",
          "type": "webview",
          "icon": "resources/sqlcortex.svg"
        },
        {
          "id": "dbcopilot.logs",
          "name": "Logs",
          "type": "webview",
          "icon": "resources/sqlcortex.svg"
        }
      ],
      "sqlcortex": [
        {
          "id": "sqlcortex.overview",
          "name": "Overview",
          "icon": "resources/sqlcortex.svg"
        },
        {
          "id": "sqlcortex.databaseExplorer",
          "name": "Database Explorer",
          "icon": "resources/sqlcortex.svg"
        },
        {
          "id": "sqlcortex.chatView",
          "name": "Chat",
          "type": "webview",
          "icon": "resources/sqlcortex.svg"
        }
      ],
      "dbcopilot": [
        {
          "id": "dbcopilot.overview",
          "name": "Overview",
          "icon": "resources/sqlcortex.svg"
        },
        {
          "id": "dbcopilot.agents",
          "name": "Agents",
          "icon": "resources/sqlcortex.svg"
        },
        {
          "id": "dbcopilot.schema",
          "name": "Schema",
          "icon": "resources/sqlcortex.svg"
        },
        {
          "id": "dbcopilot.recommendations",
          "name": "Recommendations",
          "icon": "resources/sqlcortex.svg"
        },
        {
          "id": "dbcopilot.migrations",
          "name": "Migrations",
          "icon": "resources/sqlcortex.svg"
        }
      ],
      "sqlcortexInsightsSecondary": [
        {
          "id": "sqlcortex.queryInsights",
          "name": "Insights",
          "type": "webview",
          "icon": "resources/sqlcortex.svg"
        }
      ],
      "sqlcortexAgentSecondary": [
        {
          "id": "sqlcortex.agentView",
          "name": "Agent",
          "type": "webview",
          "icon": "resources/sqlcortex.svg"
        }
      ]
    },
    "menus": {
      "editor/title": [
        {
          "command": "sqlcortex.runQuery",
          "when": "resourceLangId == sql || resourceLangId == mssql || resourceLangId == pgsql",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "sqlcortex.analyzeSelection",
          "when": "editorTextFocus && editorHasSelection && (resourceLangId == sql || resourceLangId == mssql || resourceLangId == pgsql)",
          "group": "navigation"
        },
        {
          "command": "sqlcortex.analyzeSelectionWithAnalyze",
          "when": "editorTextFocus && editorHasSelection && (resourceLangId == sql || resourceLangId == mssql || resourceLangId == pgsql)",
          "group": "navigation"
        },
        {
          "command": "sqlcortex.runSelection",
          "when": "editorTextFocus && editorHasSelection && (resourceLangId == sql || resourceLangId == mssql || resourceLangId == pgsql)",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "sqlcortex.refreshExplorer",
          "when": "view == sqlcortex.databaseExplorer",
          "group": "navigation"
        },
        {
          "command": "sqlcortex.searchTable",
          "when": "view == sqlcortex.databaseExplorer",
          "group": "navigation"
        },
        {
          "command": "sqlcortex.selectConnection",
          "when": "view == sqlcortex.databaseExplorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "sqlcortex.runTableQuery",
          "when": "view == sqlcortex.databaseExplorer && viewItem == sqlcortex.table",
          "group": "navigation"
        },
        {
          "command": "sqlcortex.analyzeTable",
          "when": "view == sqlcortex.databaseExplorer && viewItem == sqlcortex.table",
          "group": "navigation"
        },
        {
          "command": "sqlcortex.copyTableName",
          "when": "view == sqlcortex.databaseExplorer && viewItem == sqlcortex.table",
          "group": "inline"
        },
        {
          "command": "sqlcortex.copyTableName",
          "when": "view == sqlcortex.databaseExplorer && viewItem == sqlcortex.column",
          "group": "inline"
        },
        {
          "command": "sqlcortex.copyColumnName",
          "when": "view == sqlcortex.databaseExplorer && viewItem == sqlcortex.column",
          "group": "inline"
        },
        {
          "command": "sqlcortex.analyzeSchema",
          "when": "view == sqlcortex.databaseExplorer && viewItem == sqlcortex.schema",
          "group": "navigation"
        },
        {
          "command": "sqlcortex.drawSchemaErd",
          "when": "view == sqlcortex.databaseExplorer && viewItem == sqlcortex.schema",
          "group": "navigation"
        },
        {
          "command": "dbcopilot.analyzeSchemaHealth",
          "when": "view == dbcopilot.schema && viewItem == dbcopilot.schema",
          "group": "navigation"
        },
        {
          "command": "dbcopilot.openErdDiagram",
          "when": "view == dbcopilot.schema && viewItem == dbcopilot.schema",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "build": "node ./esbuild.mjs",
    "watch": "node ./esbuild.mjs --watch",
    "compile": "tsc -p ./"
  },
  "dependencies": {
    "dagre": "^0.8.5",
    "mermaid": "^10.9.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "@types/vscode": "^1.85.0",
    "esbuild": "^0.20.2",
    "typescript": "^5.4.5"
  }
}
